{
    "compilerOptions": {
      "outDir": "dist",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "ignoreDeprecations": "5.0"
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  